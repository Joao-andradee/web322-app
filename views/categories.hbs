<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr/>
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                        <tr>
                            <td><a href="/posts?category={{id}}">{{id}}</a></td>
                            <td><a href="/posts?category={{id}}">{{category}}</a></td>
                        </tr>
                    {{/each}}
                    {{#unless categories}}
                        <div class="col-md-12 text-center">
                            <strong>{{message}}</strong>
                        </div>
                    {{/unless}}
                </tbody>
            </table>
        </div> 
    </div>
</div>